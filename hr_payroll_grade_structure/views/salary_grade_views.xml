<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Salary Grade Tree View -->
    <record id="view_salary_grade_tree" model="ir.ui.view">
        <field name="name">salary.grade.tree</field>
        <field name="model">salary.grade</field>
        <field name="arch" type="xml">
            <tree string="Salary Grades">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="level_count" string="Levels"/>
                <!-- <field name="active" invisible="1"/> -->
            </tree>
        </field>
    </record>

    <!-- Salary Grade Form View -->
    <record id="view_salary_grade_form" model="ir.ui.view">
        <field name="name">salary.grade.form</field>
        <field name="model">salary.grade</field>
        <field name="arch" type="xml">
            <form string="Salary Grade">
                <sheet>
                    <group>
                        <group>
                            <field name="name" placeholder="e.g., Senior Developer"/>
                            <field name="code" placeholder="e.g., SD-01"/>
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Grade Levels" name="grade_levels">
                            <field name="grade_level_ids" nolabel="1">
                                <tree editable="bottom" string="Levels">
                                    <field name="level"/>
                                    <field name="basic_salary" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="allowances" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="total_salary" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Salary Grade Search View -->
    <record id="view_salary_grade_search" model="ir.ui.view">
        <field name="name">salary.grade.search</field>
        <field name="model">salary.grade</field>
        <field name="arch" type="xml">
            <search string="Search Salary Grades">
                <field name="name" string="Grade Name"/>
                <field name="code" string="Grade Code"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Sequence" name="group_sequence" context="{'group_by': 'sequence'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Salary Grade Action -->
    <record id="action_salary_grade" model="ir.actions.act_window">
        <field name="name">Salary Grades</field>
        <field name="res_model">salary.grade</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Salary Grade
            </p>
            <p>
                Define salary grades to organize your company's compensation structure.
                Each grade can have multiple levels (A/B/C/D) with different salary amounts.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_salary_grade_root"
              name="Salary Grades"
              parent="hr.menu_human_resources_configuration"
              sequence="50"/>

    <menuitem id="menu_salary_grade"
              name="Salary Grades"
              parent="menu_salary_grade_root"
              action="action_salary_grade"
              sequence="10"/>
</odoo>
